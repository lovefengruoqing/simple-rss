{
  "name": "Image hosting",
  "version": "1.0",
  "description": "Your own image hosting!",
  "manifest_version": 2,
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    },
    "default_title": "stock helper",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
